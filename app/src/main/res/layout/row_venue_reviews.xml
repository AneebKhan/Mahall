<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@drawable/border_curved"
    >

    <directives.ITFImageView
        android:id="@+id/imgUser"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_dummy"
        />

    <directives.ITFTextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment by user"
        app:fontColor="@color/Black"
        android:textSize="@dimen/_12ssp"
        android:layout_toRightOf="@+id/imgUser"
        android:layout_alignTop="@+id/imgUser"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />

    <RatingBar
        android:id="@+id/rbComment"
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComment"
        android:layout_toRightOf="@+id/imgUser"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:numStars="5"
        android:progressTint="@color/colorPrimary"
        android:rating="0"
        android:stepSize="0.5" />






</RelativeLayout>